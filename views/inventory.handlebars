<div class="row submit">
    <div class="col-md-12">
        <form id="create-form">
            <div class="form-group">
                <label for="product-name">Product Name</label>
                <input type="text" class="form-control" id="product-name" placeholder="Product Name" />
            </div>
            <div class="form-group">
                <label for="inventory-description">Description</label>
                <input type="text" class="form-control" id="inventory-description" placeholder="Description" />
            </div>
            <div class="form-group">
                <label for="inventory-price">Price</label>
                <input type="text" class="form-control" id="inventory-price" placeholder="Price" />
            </div>
            <div class="form-group">
                <label for="inventory-quantity">Quantity</label>
                <input type="text" class="form-control" id="inventory-quantity" placeholder="Quantity" />
            </div>

            <button type="submit" class="btn btn-info add-photo">Add photo</button>

            <br />
            <br />
            <button type="submit-form" class="btn subFormClick btn-primary">Submit</button>
        </form>
    </div>
</div>






<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://via.placeholder.com/50" alt="First slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://via.placeholder.com/50" alt="Second slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://via.placeholder.com/50" alt="Third slide" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />

<div class="row">
    <div class="col-auto products">
        {{#each products}}
        <div class="col-auto card" style="width: 18rem;">
            <img class="card-img-top" src="{{dataValues.product_url}}" alt="Card image cap" />
            <div class="card-body">
                <h5 class="card-title">{{dataValues.product_name}}</h5>
                <p class="card-text">
                    {{dataValues.product_description}}
                </p>
                <p class="card-text">{{dataValues.selling_price}}
                </p>
                <p class="card-text">Only {{dataValues.inventory}} left!</p>
                <button class="btn newProductBtn btn-primary" data-id="{{id}}" data-newproduct="{{products}}">Add to
                    Cart</button>
            </div>
        </div>
        {{/each}}


    </div>
</div>

<script src="js/inventory.js"></script>